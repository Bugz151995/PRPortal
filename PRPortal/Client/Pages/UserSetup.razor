@page "/UserSetup";
@using Newtonsoft.Json;
@using PRPortal.Shared;
@using System.Text;
@inject HttpClient _httpClient;

<Title PageName="User Setup" Breadcrumb="_items" />

<EditForm Model="@User" OnValidSubmit="OnValidSubmit">
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text="User Setup">
            <MudGrid Spacing="2" Justify="Justify.Center">
                <MudItem xs="6">
                    <MudPaper Elevation="0" Class="d-flex flex-column mud-width-full py-8 px-1 gap-2">
                        <MudTextField Elevation="0" @bind-Value="User.U_EmployeeName" Label="User Code" Variant="Variant.Outlined" Margin="Margin.Dense" disable="true" />
                        <MudTextField Elevation="0" @bind-Value="User.U_Password" Label="Password" Variant="Variant.Outlined" Margin="Margin.Dense" />
                        <MudTextField Elevation="0" @bind-Value="User.U_EmployeeName" Label="Employee Name" Variant="Variant.Outlined" Margin="Margin.Dense" disable="true" />
                    </MudPaper>
                </MudItem>

                <MudItem xs="6">
                    <MudPaper Elevation="0" Class="d-flex flex-column mud-width-full py-8 px-4 gap-2">
                        <MudTextField Elevation="0" @bind-Value="User.U_EmailAddress" Label="Email Address" Variant="Variant.Outlined" Margin="Margin.Dense" />
                        <MudTextField Elevation="0" @bind-Value="User.U_UserName" Label="User Name" Variant="Variant.Outlined" Margin="Margin.Dense" disable="true" />
                        <MudSelect Margin="Margin.Dense" T="string" Label="Role" Variant="Variant.Outlined">
                            <MudSelectItem Value="@("Admin")" />
                            <MudSelectItem Value="@("Requestor")" />
                            <MudSelectItem Value="@("Approver")" />
                        </MudSelect>
                    </MudPaper>
                </MudItem>
            </MudGrid>

            <MudGrid Spacing="2" Justify="Justify.Center">
                <MudItem xs="6">
                    <MudPaper Elevation="0" Class="d-flex flex-column mud-width-full py-8 px-1 gap-2">
                        <MudTextField Elevation="0" @bind-Value="User.U_Approver1" Label="Approver 1" Variant="Variant.Outlined" Margin="Margin.Dense" disable="true" />
                        <MudTextField Elevation="0" @bind-Value="User.U_Approver2" Label="Approver 2" Variant="Variant.Outlined" Margin="Margin.Dense" />
                        <MudTextField Elevation="0" @bind-Value="User.U_Approver3" Label="Approver 3" Variant="Variant.Outlined" Margin="Margin.Dense" disable="true" />
                        <MudTextField Elevation="0" @bind-Value="User.U_Approver4" Label="Approver 4" Variant="Variant.Outlined" Margin="Margin.Dense" />
                    </MudPaper>
                </MudItem>
                <MudItem xs="6"></MudItem>
            </MudGrid>

            <MudGrid Spacing="2" Justify="Justify.FlexEnd">
                <MudItem xs="4">
                    <MudCardActions Class="d-flex justify-end gap-2">
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Save">Save</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.Close">Cancel</MudButton>
                    </MudCardActions>
                </MudItem>
            </MudGrid>

        </MudTabPanel>
        <MudTabPanel Text="Tab Two">
            <MudText>Content Two</MudText>
        </MudTabPanel>

    </MudTabs>


</EditForm>
@code {
    User User = new User();

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem> {
        new BreadcrumbItem("User Setup", href: "UserSetup", disabled: true)
    };

    // form validation
    bool success = false;
    private void OnValidSubmit(EditContext context)
    {
        // POST Request here after the inputs are validated....
        var content = new StringContent(JsonConvert.SerializeObject(context), Encoding.UTF8, "application/json");
        var response = _httpClient.PostAsJsonAsync("U_FT_WPUS", content);

        success = true;
        StateHasChanged();
    }
}